<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/primary_action_button"
        android:layout_width="@dimen/margin_26dp"
        android:layout_height="@dimen/margin_26dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginVertical="@dimen/margin_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back_button_accessibility" />

    <TextView
        style="@style/SubTitleSansSerif_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/secondary_action_button"
        app:layout_constraintStart_toEndOf="@+id/primary_action_button"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/custom_actionbar_title" />

    <ImageView
        android:id="@+id/secondary_action_button"
        android:layout_width="@dimen/margin_26dp"
        android:layout_height="@dimen/margin_26dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/share_button_accessibility" />



</androidx.constraintlayout.widget.ConstraintLayout>